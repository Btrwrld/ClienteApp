<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_platillos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ce.datosi.clientapp.MenuPlatillos"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Platillos"
        android:textSize="15dp"
        android:id="@+id/texView1"
        android:textAlignment="center"/>

    <ListView
        android:id="@+id/lvplatillos"
        android:layout_width="wrap_content"
        android:layout_height="243dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.44" />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos del Platillo"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/texView"/>

    <TextView
        android:text="Calorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nutriInfor"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="Tiempo de preparaciÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/tiempoInfor"/>

    <TextView
        android:text="Precio($)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/precioInfor"
        android:textSize="15dp"/>

    <TextView
        android:text="Datos Extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datosCompInfor"
        android:textSize="15dp"
        android:layout_weight="0.45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:text="Ordenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ordenar"
            android:layout_marginStart="50dp"
            android:layout_weight="0.30" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_weight="0.30"
            android:id="@+id/regresar" />

    </LinearLayout>

</LinearLayout>
