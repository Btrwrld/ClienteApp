<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ce.datosi.clientapp.ClienteLogin"
    android:weightSum="1"
    android:id="@+id/ll">

    <!-- Login progress -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtnombreUsuario"
        android:hint="Nombre de usuario"
        android:layout_weight="0.10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtContrasena"
        android:hint="Contraseña"
        android:layout_weight="0.15" />

    <TextView
        android:text="Usted se encuentra en la mesa:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl"
        android:layout_weight="0.10"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <TextView
        android:text="Esperando a realizar escaneo..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblMesa"
        android:layout_weight="0.10"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultado"
        android:layout_weight="0.10"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <Button
        android:id="@+id/btnEscanear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escanear QR"/>

    <Button
        android:text="Iniciar sesión"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnIniciar"
        android:layout_weight="0.10" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

</LinearLayout>
