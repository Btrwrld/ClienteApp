<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ce.datosi.clientapp.MenuPrincipal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:id="@+id/ibtnMIc"
        android:layout_alignParentBottom="true"
        android:onClick="onClickImgBtnHablar"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtprogresoOrden" />

    <TextView
        android:text="Bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtBienvenida"
        android:textSize="18sp" />



    <TextView
        android:text="Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreUsuario"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtBienvenida"
        android:layout_marginStart="18dp" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnordenar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnpagar"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/pbProgresoOrden"
        android:layout_marginStart="13dp" />

    <Button
        android:text="Chatear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChatear"
        android:layout_above="@+id/btnenviarCalificacion"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Calificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnenviarCalificacion"
        android:layout_above="@+id/ibtnMIc"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
