<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ce.datosi.clientapp.MenuPrincipal">

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/pbProgresoOrden"
        android:layout_alignEnd="@+id/txtprogresoOrden"
        android:layout_alignParentBottom="true"
        android:indeterminate="false" />

    <TextView
        android:text="Progreso de su orden:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pbProgresoOrden"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:id="@+id/txtprogresoOrden" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:id="@+id/ibtnMIc"
        android:layout_below="@+id/txtprogresoOrden"
        android:layout_alignParentBottom="true"
        android:onClick="onClickImgBtnHablar"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/txtmic" />

    <TextView
        android:text="Bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtBienvenida"
        android:textSize="18sp" />

    <TextView
        android:text="Hable para ordenar :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtmic"
        android:layout_alignBaseline="@+id/txtprogresoOrden"
        android:layout_alignBottom="@+id/txtprogresoOrden"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/linearLayout" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/btnordenar"
        app:backgroundTint="@android:color/holo_blue_bright"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp" />

    <Button
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnenviar"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/txtmic"
        android:layout_alignStart="@+id/btncalificar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btncalificar"
        android:layout_alignBottom="@+id/btnenviar"
        android:layout_below="@+id/btnordenar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj11"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj10"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj9"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj8"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj7"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj6"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj5"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj4"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj3"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj2"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msj1"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtmsjChat"
            android:imeOptions="actionDone"
            android:hint="Sea parte del chat aqui" />
    </LinearLayout>

    <Button
        android:text="Calificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btncalificar"
        android:layout_below="@+id/btnordenar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="77dp"
        android:layout_alignStart="@+id/btnpagar" />

    <TextView
        android:text="Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreUsuario"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtBienvenida"
        android:layout_marginStart="18dp" />

    <Button
        android:text="Pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnpagar"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
